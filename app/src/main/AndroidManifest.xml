<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.romickid.simpbook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.romickid.simpbook.main.ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.romickid.simpbook.record.ActivityRecord" />
        <activity android:name="com.romickid.simpbook.account.ActivityAccount" />
        <activity android:name="com.romickid.simpbook.account.ActivityAccountEdit" />
        <activity android:name="com.romickid.simpbook.statement.ActivityStatement" />
        <activity android:name="com.romickid.simpbook.setting.ActivitySetting" />
        <activity android:name="com.romickid.simpbook.edit.ActivityEdit" />
        <activity android:name="com.romickid.simpbook.setting.ActivityClass1Expense" />
        <activity android:name="com.romickid.simpbook.setting.ActivityClass2Expense" />
        <activity android:name="com.romickid.simpbook.setting.ActivityClass1Income" />
        <activity android:name="com.romickid.simpbook.setting.ActivityClass2Income" />
        <activity android:name="com.romickid.simpbook.setting.ActivityAccountSetting" />
        <activity android:name="com.romickid.simpbook.fragments.Collection.ActivityCollectionAdd" />
    </application>

</manifest>